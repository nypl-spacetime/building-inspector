<h1>Listing <%= number_with_delimiter(@total) %> flags (<%= number_with_delimiter(@total_since_v2) %> since version 2)</h1>

<table>
  <tr>
    <th><%= sortable "flag_type", "Type" %></th>
    <th>Polygon/Sheet</th>
    <th><%= sortable "session_id", "Session" %></th>
    <th>Flag value</th>
    <th>Is primary</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flags.each do |flag| %>
  <tr>
    <td><%= flag.flag_type %></td>
    <td><%= link_to "#{flag.flaggable_type}:#{flag.flaggable_id}", flag.flaggable %></td>
    <td><%= flag.session_id %></td>
    <td><%= flag.flag_value %></td>
    <td><%= flag.is_primary %></td>
    <td><%= link_to 'Show', flag %></td>
    <td><%= link_to 'Edit', edit_flag_path(flag) %></td>
    <td><%= link_to 'Destroy', flag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Flag', new_flag_path %>

<%= will_paginate @flags %>